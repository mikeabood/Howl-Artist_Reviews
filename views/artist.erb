<ul>

<img src="<%= @artist.picture %>" height="200px" width="200px" border="2px"/>
<li> <h2> <%= @artist.name %> </h2> </li>
<li> <%= @artist.genre %> </li>

</ul>


<ul class="posts"> 
	<% @artist.comments.each do |comment| %>
		<li> <%= comment.user.username%> <%= comment.comment %> </li> 
	<% end %>
</ul>



<form action="/artist" method="POST">
	<input type="text" name="comment" placeholder="Add a comment" />
	
	<input type="hidden" name="artist_id" value=" <%= @artist.id %>" placeholder="Add a comment" maxlength="30"/>

	<button> Post </button>
</form>









